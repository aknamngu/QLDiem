using System;

class Program
{
    static void Main(string[] args)
    {
        Console.OutputEncoding = System.Text.Encoding.UTF8; // h·ªó tr·ª£ ti·∫øng Vi·ªát

        // =============================
        // 1. T·∫°o objA ng·∫´u nhi√™n
        // =============================
        Console.Write("Nh·∫≠p s·ªë ph·∫ßn t·ª≠ k cho m·∫£ng objA: ");
        int k = int.Parse(Console.ReadLine());
        IntArray objA = new IntArray(k);

        // 2. Xem c√°c gi√° tr·ªã trong objA
        Console.WriteLine("\nM·∫£ng objA ph√°t sinh ng·∫´u nhi√™n:");
        objA.Output();

        // 3. T√¨m ki·∫øm tu·∫ßn t·ª± trong objA
        Console.Write("\nNh·∫≠p gi√° tr·ªã c·∫ßn t√¨m trong objA: ");
        int x = int.Parse(Console.ReadLine());
        int posLinear = objA.LinearSearch(x);
        if (posLinear != -1)
            Console.WriteLine($"‚úÖ T√¨m th·∫•y {x} t·∫°i v·ªã tr√≠ {posLinear} (t√¨m ki·∫øm tu·∫ßn t·ª±)");
        else
            Console.WriteLine($"‚ùå Kh√¥ng t√¨m th·∫•y {x} trong objA");

        // =============================
        // 4. T·∫°o objB v·ªõi k ph·∫ßn t·ª≠ tƒÉng d·∫ßn
        // =============================
        Console.Write("\nNh·∫≠p s·ªë ph·∫ßn t·ª≠ k cho m·∫£ng objB (c√≥ th·ª© t·ª± tƒÉng d·∫ßn): ");
        int m = int.Parse(Console.ReadLine());
        int[] sortedArr = new int[m];
        Console.WriteLine("Nh·∫≠p c√°c ph·∫ßn t·ª≠ c·ªßa objB (theo th·ª© t·ª± tƒÉng d·∫ßn):");
        for (int i = 0; i < m; i++)
        {
            Console.Write($"objB[{i}] = ");
            sortedArr[i] = int.Parse(Console.ReadLine());
        }
        IntArray objB = new IntArray(sortedArr);

        Console.WriteLine("\nM·∫£ng objB:");
        objB.Output();

        // 5. T√¨m ki·∫øm nh·ªã ph√¢n trong objB
        Console.Write("\nNh·∫≠p gi√° tr·ªã c·∫ßn t√¨m trong objB: ");
        int y = int.Parse(Console.ReadLine());
        int posBinary = objB.BinarySearch(y);
        if (posBinary != -1)
            Console.WriteLine($"‚úÖ T√¨m th·∫•y {y} t·∫°i v·ªã tr√≠ {posBinary} (t√¨m ki·∫øm nh·ªã ph√¢n)");
        else
            Console.WriteLine($"‚ùå Kh√¥ng t√¨m th·∫•y {y} trong objB");

        // =============================
        // 6. So s√°nh minh h·ªça tu·∫ßn t·ª± v√† nh·ªã ph√¢n
        // =============================
        Console.WriteLine("\n=== So s√°nh minh h·ªça t√¨m ki·∫øm trong objB (d√£y c√≥ th·ª© t·ª± tƒÉng d·∫ßn) ===");
        Console.Write("Nh·∫≠p gi√° tr·ªã c·∫ßn so s√°nh t√¨m ki·∫øm: ");
        int z = int.Parse(Console.ReadLine());

        Console.WriteLine("\nüëâ T√¨m ki·∫øm tu·∫ßn t·ª± (Linear Search):");
        objB.LinearSearchTrace(z);

        Console.WriteLine("\nüëâ T√¨m ki·∫øm nh·ªã ph√¢n (Binary Search):");
        objB.BinarySearchTrace(z);
    }
}
